{
  "name": "permahub",
  "version": "1.0.29",
  "type": "module",
  "description": "A global platform connecting permaculture practitioners, projects, and sustainable living communities",
  "scripts": {
    "dev": "vite",
    "dev:cloud": "VITE_USE_CLOUD_DB=true vite",
    "dev:local": "VITE_USE_CLOUD_DB=false vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:smoke && npm run test:unit && npm run test:integration",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:unit": "playwright test tests/unit --project=chromium",
    "test:unit:watch": "vitest tests/unit",
    "test:integration": "playwright test tests/integration --project=chromium",
    "test:integration:wiki": "playwright test tests/integration/wiki",
    "test:integration:auth": "playwright test tests/integration/auth",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:smoke": "playwright test tests/e2e/smoke",
    "test:e2e:regression": "playwright test tests/e2e/regression",
    "test:smoke": "playwright test tests/e2e/smoke --project=chromium",
    "test:critical": "playwright test --grep @critical --project=chromium",
    "test:wiki": "playwright test --grep @wiki",
    "test:auth": "playwright test --grep @auth",
    "test:database": "playwright test --grep @database",
    "test:search": "playwright test --grep @search",
    "test:filters": "playwright test --grep @filters",
    "test:mobile": "playwright test --grep @mobile --project=mobile-chrome",
    "test:responsive": "playwright test --grep @responsive",
    "test:browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:cross-browser": "playwright test tests/e2e/smoke --project=chromium --project=firefox --project=webkit",
    "test:debug": "playwright test --debug",
    "test:headed:slow": "SLOW_MO=100 playwright test --headed",
    "test:trace": "playwright test --trace on",
    "test:report": "playwright show-report",
    "test:quick": "npm run test:smoke",
    "test:ci": "npm run test:smoke && npm run test:critical && npm run test:integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,html,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css,md}\"",
    "verify:guide": "node scripts/verify-guide.js",
    "verify:all-guides": "node scripts/verify-guide.js --all",
    "verify:seed": "node scripts/verify-seed-file.js",
    "verify:seed:madeira": "node scripts/verify-seed-file.js supabase/to-be-seeded/seed_madeira_czech.sql",
    "verify:seed:verified": "node scripts/verify-seed-file.js supabase/to-be-seeded/004_real_verified_wiki_content.sql",
    "verify:seed:events": "node scripts/verify-seed-file.js supabase/to-be-seeded/004_future_events_seed.sql",
    "verify:seed:all": "npm run verify:seed:madeira && npm run verify:seed:verified && npm run verify:seed:events",
    "deploy:gh-pages": "gh-pages -d dist",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npm run test:smoke",
    "pre-push": "npm run test:ci"
  },
  "keywords": [
    "permaculture",
    "sustainability",
    "community",
    "networking",
    "environmental"
  ],
  "author": "lballaty",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "eslint": "^8.56.0",
    "gh-pages": "^6.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.1.1",
    "simple-git-hooks": "^2.13.1",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "dotenv": "^17.2.3"
  }
}
