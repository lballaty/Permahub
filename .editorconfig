# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, HTML, CSS
[*.{js,html,css}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# JSON
[*.json]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2
